<cw:CustomWindow xmlns:cw="clr-namespace:CustomWindows;assembly=CustomWindows"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:my="clr-namespace:WPFControls;assembly=WPFUtils"
                 xmlns:c="clr-namespace:TEC_PID_Control.Controls"
                 x:Name="customWindow"
                 x:Class="TEC_PID_Control.MainWindow"
                 Title="Main Window"
                 Height="396"
                 Width="518">
  <Grid>

    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="296*" />
    </Grid.ColumnDefinitions>
    <StackPanel Grid.RowSpan="2"
                Margin="2">
      <ComboBox x:Name="cbCOMK"
                Margin="2" />
      <my:UnitTextBox x:Name="utbVoltage"
                      Value="{Binding Voltage, Mode=OneWay}"
                      Unit="Voltage:mV"
                      Width="100"
                      ValueFormat="N6"
                      IsReadOnly="True" />
      <Button Content="Read Voltage"
              Margin="2"
              Click="Button2_Click" />
      <Separator />
      <my:UnitTextBox x:Name="utbCurrent"
                      Value="{Binding Current, Mode=OneWay}"
                      Unit="Current:uA"
                      Width="100"
                      Height="20"
                      ValueFormat="N6"
                      IsReadOnly="True" />
      <Button Content="Read Current"
              Margin="2"
              Click="GetCurrent_Click" />
      <my:UnitTextBox x:Name="utbSetVolt"
                      Unit="Voltage:V"
                      Width="100"
                      ValueFormat="N6"
                      Value="2" />
      <Button Content=" Measure Resistance "
              Margin="2"
              Click="Set_Voltage_Click" />
      <my:UnitTextBox x:Name="utbILim"
                      Unit="Current:uA"
                      ValueFormat="N6"
                      MinValue="0"
                      Width="100"
                      Value="1E-06" />
      <my:UnitTextBox x:Name="utbRes"
                      Unit="Resistance:GOhm"
                      ValueFormat="N6"
                      Width="100"
                      IsReadOnly="True" />
      <Button Content="Measure Temperature"
              Margin="2"
              Click="Set_Temperature_Click" />
      <my:UnitTextBox x:Name="utbTemp"
                      Width="100"
                      Unit="TemperatureC:°C"
                      ValueFormat="N6"
                      IsReadOnly="True" />
      <c:UsrCntrlK2400 />

    </StackPanel>

    <TextBox x:Name="ConsoleOut"
             Grid.Column="1"
             IsReadOnly="True"
             Margin="2"
             Grid.RowSpan="1"
             Background="#FFE2F2F4"
             VerticalScrollBarVisibility="Auto"
             HorizontalScrollBarVisibility="Auto"
             TextChanged="ConsoleOut_TextChanged"
             Grid.ColumnSpan="2" />
    <DockPanel Grid.Column="1"
               Grid.Row="2"
               Margin="2,2,2,2"
               Grid.ColumnSpan="2">
      <TextBlock Text="&gt;" />
      <TextBox MaxLines="1"
               KeyDown="TextBox_KeyDown" />

    </DockPanel>

  </Grid>
</cw:CustomWindow>
